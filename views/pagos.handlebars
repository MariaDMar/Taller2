                            <h3>NÚMERO DE TARJETA</h3>
                            <input type="text" name="expiracion" placeholder="Fecha de expiración">
                            <h3>FECHA DE EXPIRACIÓN</h3>
                            <input type="text" name="direccion" placeholder="Dirección">
                            <h3>DIRECCIÓN</h3>
                            <input class="input-productos" type="hidden" name="enviaproduct" value="">
